<%= form_for(:quiz, :url => quizzes_path) do |f| %>
  <%= f.label 'Command Description' %>
  <%= f.text_field :question_text %>

  <%= f.label 'Correct Answer' %>
  <%= f.text_field :correct_answer %>

  <%= f.label 'Wrong Answer 1' %>
  <%= f.text_field :name => :answer_1 %>
  <%= f.label 'Wrong Answer 2' %>
  <%= f.text_field :name => :answer_2 %>
  <%= f.label 'Wrong Answer 3' %>
  <%= f.text_field :name => :answer_3 %>

  <%= f.submit 'Submit' %>
<% end %>




